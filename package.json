{
	"name": "directus-extension-hmac-sha256-hash",
	"description": "This extension provides a simple and secure operation for Directus Flows to generate an HMAC-SHA256 hash from an input string and a secret key. It's perfect for creating signatures for API requests, verifying webhooks, or any other task requiring a keyed hash.",
	"icon": "extension",
	"version": "1.0.1",
	"author": "Kamil Nader",
	"license": "GPL-3.0",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/kamilnader/directus-extension-hmac-sha256-hash.git"
	},
	"bugs": {
		"url": "https://github.com/daltonsutton/directus-extension-midnight-minimal-theme/issues"
	},
	"homepage": "https://github.com/kamilnader/directus-extension-hmac-sha256-hash",
	"keywords": [
		"directus",
		"directus-extension",
		"directus-extension-operation"
	],
	"type": "module",
	"files": [
		"dist"
	],
	"directus:extension": {
		"type": "operation",
		"path": {
			"app": "dist/app.js",
			"api": "dist/api.js"
		},
		"source": {
			"app": "src/app.ts",
			"api": "src/api.ts"
		},
		"host": "^10.10.0 || ^11.0.0"
	},
	"scripts": {
		"build": "directus-extension build",
		"dev": "directus-extension build -w --no-minify",
		"link": "directus-extension link",
		"validate": "directus-extension validate"
	},
	"devDependencies": {
		"@directus/extensions-sdk": "15.0.0",
		"@types/node": "^24.2.1",
		"typescript": "^5.9.2",
		"vue": "^3.5.18"
	}
}